generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String         @id @default(cuid())
  email        String         @unique
  passwordHash String
  name         String?
  role         UserRole       @default(USER)
  orders       Order[]
  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @updatedAt
  deliveries   Delivery[]
  wishlist     WishlistItem[]
}

model Vendor {
  id           String       @id @default(cuid())
  email        String       @unique
  passwordHash String
  businessName String
  contactName  String?
  phone        String?
  status       VendorStatus @default(PENDING)
  isActive     Boolean      @default(true)
  createdAt    DateTime     @default(now())
  updatedAt    DateTime     @updatedAt
  products     Product[]
  orders       Order[]
  deliveries   Delivery[]
}

model Product {
  id       String @id @default(cuid())
  vendorId String
  vendor   Vendor @relation(fields: [vendorId], references: [id], onDelete: Cascade)

  name        String
  description String?
  shortDesc   String?
  benefits    String[] @default([])
  relatedIds  String[] @default([])

  // âœ… NEW SOURCE OF TRUTH
  priceUsdCents Int

  category    String?
  imageUrl    String?
  isAvailable Boolean       @default(true)
  isDeleted   Boolean       @default(false)
  status      ProductStatus @default(DRAFT)

  orderItems    OrderItem[]
  wishlistItems WishlistItem[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Order {
  id     String @id @default(cuid())
  userId String
  user   User   @relation(fields: [userId], references: [id])

  vendorId String
  vendor   Vendor @relation(fields: [vendorId], references: [id])

  items    OrderItem[]
  payments Payment[] // ðŸ‘ˆ add this

  totalAmountKobo Int
  currency        String        @default("NGN")
  status          OrderStatus   @default(PENDING)
  paymentStatus   PaymentStatus @default(PENDING)
  delivery        Delivery?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model OrderItem {
  id      String @id @default(cuid())
  orderId String
  order   Order  @relation(fields: [orderId], references: [id], onDelete: Cascade)

  productId String
  product   Product @relation(fields: [productId], references: [id])

  quantity      Int
  unitPriceKobo Int
  subtotalKobo  Int
}

model Payment {
  id      String @id @default(cuid())
  orderId String
  order   Order  @relation(fields: [orderId], references: [id])

  provider    String // "paystack"
  providerRef String? // paystack reference
  amountKobo  Int
  currency    String        @default("NGN")
  status      PaymentStatus @default(PENDING)

  rawResponse Json? // store Paystack init response / webhook payload

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Delivery {
  id       String @id @default(cuid())
  orderId  String @unique
  vendorId String
  userId   String

  pickupLocation  String
  dropoffLocation String
  riderName       String?
  riderPhone      String?
  notes           String?

  status DeliveryStatus @default(PENDING)

  trackingCode String @unique // âœ… no default â€” we generate FCQ-TRK-XXXXXX in code

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  order  Order  @relation(fields: [orderId], references: [id])
  vendor Vendor @relation(fields: [vendorId], references: [id])
  user   User   @relation(fields: [userId], references: [id])

  events DeliveryEvent[]
}

model DeliveryEvent {
  id         String @id @default(cuid())
  deliveryId String

  status   DeliveryStatus // âœ… REQUIRED (routes use it)
  title    String
  note     String?
  location String?

  createdAt DateTime @default(now())

  delivery Delivery @relation(fields: [deliveryId], references: [id], onDelete: Cascade)

  @@index([deliveryId])
}

model LogisticsRequest {
  id           String @id @default(cuid())
  trackingCode String @unique

  // Optional: if this request is tied to an existing FoodCheQ order
  orderId String?

  fullName String
  phone    String
  email    String

  pickupLocation  String
  dropoffLocation String

  pickupDate  DateTime?
  packageType String
  notes       String?

  status DeliveryStatus @default(PENDING)

  riderName       String?
  riderPhone      String?
  currentLocation String?
  eta             DateTime?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model AppSetting {
  key       String   @id
  value     Decimal // e.g. 1600.00
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum OrderStatus {
  PENDING // created, waiting for vendor/payment
  ACCEPTED // vendor accepted
  REJECTED // vendor rejected
  PREPARING // being prepared
  READY // ready for pickup/dispatch
  COMPLETED // delivered/finished
  CANCELLED // cancelled by user/vendor/admin
}

model WishlistItem {
  id        String   @id @default(cuid())
  userId    String
  productId String
  createdAt DateTime @default(now())

  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  product Product @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@unique([userId, productId])
  @@index([userId])
  @@index([productId])
}

enum UserRole {
  USER
  ADMIN
}

enum VendorStatus {
  PENDING
  APPROVED
  SUSPENDED
}

enum ProductStatus {
  DRAFT
  ACTIVE
  INACTIVE
}

enum PaymentStatus {
  PENDING
  PAID
  FAILED
  REFUNDED
}

enum DeliveryStatus {
  PENDING
  ASSIGNED
  IN_TRANSIT
  COMPLETED
  CANCELLED
}

enum LogisticsRequestStatus {
  PENDING
  ASSIGNED
  IN_TRANSIT
  COMPLETED
  CANCELLED
}
